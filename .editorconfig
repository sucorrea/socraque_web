# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.html]
indent_style = space
indent_size = 2

[*.{ts,json,js,tsx,jsx}]
indent_style = space
indent_size = 2

[*.md]
indent_size = 2
indent_style = space


[*.{yml,yaml}]
indent_size = 2
indent_style = space